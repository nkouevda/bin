#!/usr/bin/env bash

set -euo pipefail

# Keep the first of each set of lines with identical prefix before refs
git show-branch --color "$@" \
  | awk '
    {
      a = $0
      sub(/ \[.+$/, "", a)
      if (!(a in uniq)) {
        print
      }
      ++uniq[a]
    }' \
  | less --quit-if-one-screen --raw-control-chars --no-init
