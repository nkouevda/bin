#!/usr/bin/env bash

set -euo pipefail

default_mode=16

usage() {
  cat <<EOF
usage: colors [options] [16|256]

Print a sample of 16 or 256 colors; default: $default_mode.

Options:
    -h, --help
        Show this help message and exit.
EOF
}

print-line() {
  local start end i
  start="$1"
  end="$2"
  for (( i = $start; i < $end; ++i )); do
    printf "\e[38;5;%dm %3d " "$i" "$i"
    printf "\e[48;5;%dm     " "$i"
    printf "\e[0m"
  done
  printf "\e[0m\n"
}

print-group() {
  local start end incr i
  start="$1"
  end="$2"
  incr="$3"
  for (( i = $start; i < $end; i += $incr )); do
    print-line "$i" "$(( i + incr ))"
  done
}

mode="$default_mode"

while (( $# )); do
  case "$1" in
    -h|--help)
      usage
      exit
      ;;
    -*)
      printf "error: invalid option: %s\n" "$1" >&2
      exit 1
      ;;
    16|256)
      mode="$1"
      ;;
    *)
      usage
      exit 1
      ;;
  esac

  shift
done

if (( $# )); then
  usage
  exit 1
fi

print-group 0 16 8

if [[ "$mode" == 256 ]]; then
  print-group 16 256 6
else
  printf "\n"

  text="gYw"
  padding="3"
  margin="1"

  weights=("" "1")
  fs=("" "38;5;"{0..8})
  bs=("" "48;5;"{0..8})

  printf "%b%8s" "\e[0m" ""

  for b in "${bs[@]}"; do
    printf "%$(( ${#text} + 2 * ${padding} + ${margin} ))s" "${b}m"
  done

  printf "\n"

  for f in "${fs[@]}"; do
    for weight in "${weights[@]}"; do
      printf "%9s" "${weight};${f}m"

      for b in "${bs[@]}"; do
        printf "%${margin}s%b" "" "\e[${weight};${f};${b}m"
        printf "%${padding}s%s%${padding}s" "" "${text}" ""
        printf "%b" "\e[0m"
      done

      printf "\n"
    done
  done
fi
